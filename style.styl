.dec-inc
	controlWidth = 1em
	display: inline-block
	position: relative
	padding: 0 controlWidth
	user-select: none

	&__control
		display: block
		position: absolute
		top: 0
		width: controlWidth
		height: 100%
		text-align: center
		cursor: pointer

		&::after
			display: block
			position: absolute
			top: 50%
			left: 50%
			transform: translate(-50%, -50%)

		&_disabled
			cursor: default

	&__control_type_dec
		left: 0

		&::after
			content: '￬'

	&__control_type_inc
		right: 0

		&::after
			content: '￪'

	&__value
		width: 1.2em
		font-size: inherit
		text-align: right
